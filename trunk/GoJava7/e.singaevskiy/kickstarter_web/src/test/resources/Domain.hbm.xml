<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ua.com.goit.gojava7.kickstarter.domain">

	<class name="Quote" table="Quote">
		<id name="text" />
		<property name="author" />
	</class>

	<class name="Category">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name" />
	</class>

	<class name="Project">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name" />
		<property name="goalSum" />
		<property name="startDate" />
		<property name="endDate" />
		<property name="categoryId" />
		<property name="description" />
		<property name="videoUrl" />
		<property name="author" />
	</class>

	<class name="Question">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="question" />
		<property name="answer" />
		<property name="projectId" />
	</class>
	
	<class name="Reward">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="description" />
		<property name="pledgeSum" />
		<property name="projectId" />
	</class>
	
	<class name="Payment">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="cardId" />
		<property name="date" />
		<property name="projectId" />
		<property name="rewardId" />
		<property name="sum" />
		<property name="user" />
	</class>

</hibernate-mapping>