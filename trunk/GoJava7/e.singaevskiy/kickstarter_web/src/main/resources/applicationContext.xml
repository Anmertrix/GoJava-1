<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"

	default-lazy-init="true" default-autowire="byName">

	<context:property-placeholder location="classpath:config.properties" />

	<bean class="ua.com.goit.gojava7.kickstarter.dao.jdbc.util.JdbcDispatcher"
		id="jdbcDispatcher" destroy-method="close" lazy-init="true"> <!-- singletone by default -->
		<constructor-arg name="driver" value="${jdbc.driver}"></constructor-arg>
		<constructor-arg name="url" value="${jdbc.url}"></constructor-arg>
		<constructor-arg name="user" value="${jdbc.user}"></constructor-arg>
		<constructor-arg name="password" value="${jdbc.password}"></constructor-arg>
	</bean>

	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="${jdbc.driver}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.user}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="quoteDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.QuotePostgreDAO"
		scope="singleton" autowire="constructor" lazy-init="true" />

	<bean id="categoryDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.CategoryPostgreDAO" />

	<bean id="projectDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.ProjectPostgreDAO"
		scope="singleton" autowire="constructor" lazy-init="true" />

	<bean id="questionsDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.QuestionPostgreDAO"
		scope="singleton" autowire="constructor" lazy-init="true" />

	<bean id="paymentDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.PaymentPostgreDAO"
		scope="singleton" autowire="constructor" lazy-init="true" />

	<bean id="rewardDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.RewardPostgreDAO"
		scope="singleton" autowire="constructor" lazy-init="true" />
		
	<import resource="loggerAspect.xml"/>

</beans>
