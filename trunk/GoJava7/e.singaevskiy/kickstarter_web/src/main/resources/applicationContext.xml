<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"

	default-lazy-init="true" default-autowire="byName">

	<context:property-placeholder location="classpath:config.properties" />
 
	<bean id="quoteDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.QuotePostgreDAO" />

	<bean id="categoryDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.CategoryPostgreDAO" />

	<bean id="projectDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.ProjectPostgreDAO" />

	<bean id="questionsDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.QuestionPostgreDAO" />

	<bean id="paymentDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.PaymentPostgreDAO"/>

	<bean id="rewardDAO"
		class="ua.com.goit.gojava7.kickstarter.dao.jdbc.postgre.RewardPostgreDAO" />
		
	<import resource="loggerAspect.xml"/>

</beans>
