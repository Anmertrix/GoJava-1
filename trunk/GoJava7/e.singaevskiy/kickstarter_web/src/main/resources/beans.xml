<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:property-placeholder
		location="config.properties" />
	
	<bean class="ua.com.goit.gojava7.kickstarter.dao.StorageFactory"
		id="storageFactory" destroy-method="close">
		<property name="dataType">
			<value type="ua.com.goit.gojava7.kickstarter.dao.DataType">POSTGRE</value>
		</property>
		<property name="dispatcher" ref="jdbcDispatcher"></property>
	</bean>
	
	<bean class="ua.com.goit.gojava7.kickstarter.dao.jdbc.util.JdbcDispatcher"
		id="jdbcDispatcher" destroy-method="close">
		<constructor-arg name="driver" value="${jdbc.driver}"></constructor-arg>
		<constructor-arg name="url" value="${jdbc.url}"></constructor-arg>
		<constructor-arg name="user" value="${jdbc.user}"></constructor-arg>
		<constructor-arg name="password" value="${jdbc.password}"></constructor-arg>
	</bean>
</beans>
