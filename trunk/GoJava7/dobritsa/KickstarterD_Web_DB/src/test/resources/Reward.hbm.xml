<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ua.com.goit.gojava7.kickstarter.models">

	<class name="Reward" table="Reward">
		<id name="rewardId">
			<generator class="native" />
		</id>
		<property name="amount" />
		<property name="reward" />
	
		<many-to-one name="Project" class="ua.com.goit.gojava7.kickstarter.models.Project"
            column="projectId" not-null="true"
            cascade="all" />	

	</class>

</hibernate-mapping>