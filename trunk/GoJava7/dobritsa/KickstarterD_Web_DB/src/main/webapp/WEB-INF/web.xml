<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Kickstarter</display-name>
  
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext*.xml</param-value>
	</context-param>
  
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>  

  <servlet>
    <servlet-name>ua.com.goit.gojava7.kickstarter.servlet.CategoriesServlet</servlet-name>
    <servlet-class>ua.com.goit.gojava7.kickstarter.servlet.CategoriesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
</web-app>