<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ua.com.goit.gojava7.kickstarter.beans">

	<class name="Project" table="project">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="name" column="name" type="string"/>
		<property name="shortDescription" column="short_description" type="string"/>
		<property name="requiredSum" column="required_sum" type="integer"/>
		<property name="fullDescription" column="full_description" type="string"/>
		<property name="linkOnVideo" column="link_on_video" type="string"/>
		<property name="collectedSum" column="collected_sum" type="integer"/>
		<property name="daysLeft" column="days_left" type="integer"/>
		
		<many-to-one name="category" column="category_id" class="ua.com.goit.gojava7.kickstarter.beans.Category" not-null="true" />
		
	</class>

</hibernate-mapping>