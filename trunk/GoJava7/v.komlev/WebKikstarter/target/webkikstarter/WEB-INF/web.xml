<web-app>

	<servlet>
		<servlet-name>selectionCategories</servlet-name>
		<servlet-class>ua.com.goit.gojava7.kikstarter.controller.servlet.SelectoinCategories</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>selectionProjects</servlet-name>
		<servlet-class>ua.com.goit.gojava7.kikstarter.controller.servlet.SelectionProjects</servlet-class>
	</servlet>

	<servlet-mapping>
